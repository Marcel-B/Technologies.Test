@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>


<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<input class="form-control" id="hehe" placeholder="Name" @onkeyup="StrokeIt"/>
<p>@foppes</p>

@code {
    private int currentCount = 0;
    private string foppes = "";

    private void IncrementCount()
    {
        currentCount++;
    }

    private void StrokeIt()
    {
        foppes = "Test";
    }
}
